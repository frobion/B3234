LNFLAGS = 
COMPILEFLAG = -c
INCFLAG = -I
OUTPUT = -o
RMFLAGS = -rf

DEFINITIONS = -DNDEBUG

BUILD = build
SRC = src/commandlineinterface.cpp src/convexpolygone.cpp src/draw.cpp src/ensemble.cpp src/form.cpp src/point.cpp src/rectangle.cpp src/segment.cpp src/main.cpp
